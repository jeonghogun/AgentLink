rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function storeDoc(storeId) {
      return get(/databases/$(database)/documents/stores/$(storeId));
    }

    function isStoreOwner(storeId) {
      return isAuthenticated() &&
        storeDoc(storeId).data.owner_uid != null &&
        storeDoc(storeId).data.owner_uid == request.auth.uid;
    }

    match /stores/{storeId} {
      allow read: if false;

      allow create: if isAuthenticated() &&
        request.resource.data.owner_uid == request.auth.uid;

      allow update: if isStoreOwner(storeId) &&
        request.resource.data.owner_uid == resource.data.owner_uid;

      allow delete: if isStoreOwner(storeId);
    }

    match /menus/{menuId} {
      allow read: if false;

      allow create: if request.resource.data.store_id is string &&
        isStoreOwner(request.resource.data.store_id);

      allow update: if isStoreOwner(resource.data.store_id) &&
        request.resource.data.store_id == resource.data.store_id;

      allow delete: if isStoreOwner(resource.data.store_id);
    }

    match /orders/{orderId} {
      allow read, write: if false;
    }

    match /api_keys/{clientId} {
      allow read, write: if false;
    }

    match /metrics/{dateOrShard} {
      allow read, write: if false;
    }

    match /settings/{docId} {
      allow read, write: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
