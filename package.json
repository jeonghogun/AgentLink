{
  "name": "agentlink-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.0.0"
  },
  "workspaces": [
    "functions",
    "web-dashboard"
  ],
  "scripts": {
    "predev": "npm run --workspaces --if-present build",
    "dev": "concurrently \"npm run -w functions build:watch\" \"npm run -w web-dashboard dev\" \"npm run emulators\"",
    "emulators": "firebase emulators:start --import=./.firebase/emulator-data --export-on-exit",
    "lint": "npm run --workspaces --if-present lint",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "test:rules": "firebase emulators:exec --only firestore,storage \"npx tsx scripts/test-rules.ts\"",
    "seed": "tsx scripts/seed.ts"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase": "^10.14.1",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.4.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
